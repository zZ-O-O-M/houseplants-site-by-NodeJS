<%- include ('../../blocks/user-header.ejs') %>

<div class="container">
    <div class="plants-list col-12 align-content-center">
        <h1 class="text-center">Список всех растений</h1>
        <% plants.forEach(function (plant) { %>
            <a class="media plants-list__item list-item" href="/plant/<%= plant.id %>">
                <div class="row justify-content-md-center">
                    <div class="plants-list__img">
                        <img src="/public/images/1.png" class="align-self-start mr-3" alt="...">
                    </div>
                    <div class="media-body">
                        <h5 class="mt-0"><%= plant.name %></h5>
                        <p><%= plant.requirements %></p>
                    </div>
                </div>
            </a>
        <% }) %>
    </div>
</div>

<%- include ('../../blocks/footer.ejs') %>